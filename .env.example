# =============================================================================
# Builder Voice AI Platform - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!
# =============================================================================

# ===================================
# APPLICATION
# ===================================
APP_ENV=development  # development, staging, production
APP_DEBUG=true
APP_SECRET_KEY=change-this-to-a-random-32-char-string

# ===================================
# DATABASE (PostgreSQL)
# ===================================
POSTGRES_USER=bvrai
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=bvrai
DATABASE_URL=postgresql+asyncpg://bvrai:your_secure_password_here@localhost:5432/bvrai

# ===================================
# REDIS
# ===================================
REDIS_URL=redis://localhost:6379/0

# ===================================
# TELEPHONY (Required for phone calls)
# ===================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.ngrok.io

# ===================================
# SPEECH-TO-TEXT (STT) PROVIDERS
# ===================================
# Default provider: deepgram, openai, google, azure, aws, assemblyai, rev, speechmatics
DEFAULT_STT_PROVIDER=deepgram

# Deepgram (Recommended - fast real-time)
# Sign up: https://console.deepgram.com/signup
DEEPGRAM_API_KEY=your_deepgram_api_key

# OpenAI Whisper
# Sign up: https://platform.openai.com/signup
OPENAI_API_KEY=your_openai_api_key

# Google Cloud Speech-to-Text
# Setup: https://console.cloud.google.com/speech
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_PROJECT_ID=your-gcp-project-id

# Azure Speech Services
# Setup: https://portal.azure.com
AZURE_SPEECH_KEY=your_azure_speech_key
AZURE_SPEECH_REGION=eastus

# AWS Transcribe
# Setup: https://console.aws.amazon.com/transcribe
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# AssemblyAI
# Sign up: https://www.assemblyai.com/dashboard/signup
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# Rev.ai
# Sign up: https://www.rev.ai/auth/signup
REVAI_API_KEY=your_revai_api_key

# Speechmatics
# Sign up: https://portal.speechmatics.com/signup
SPEECHMATICS_API_KEY=your_speechmatics_api_key

# ===================================
# TEXT-TO-SPEECH (TTS) PROVIDERS
# ===================================
# Default provider: elevenlabs, playht, cartesia, openai, google, azure, aws, murf, resemble, wellsaid, lmnt
DEFAULT_TTS_PROVIDER=elevenlabs

# ElevenLabs (Recommended - high quality)
# Sign up: https://elevenlabs.io/sign-up
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# PlayHT
# Sign up: https://play.ht/signup
PLAYHT_API_KEY=your_playht_api_key
PLAYHT_USER_ID=your_playht_user_id

# Cartesia (Ultra-low latency)
# Sign up: https://cartesia.ai/
CARTESIA_API_KEY=your_cartesia_api_key

# Murf.ai
# Sign up: https://murf.ai/
MURF_API_KEY=your_murf_api_key

# Resemble.ai
# Sign up: https://resemble.ai/
RESEMBLE_API_KEY=your_resemble_api_key

# WellSaid Labs
# Sign up: https://wellsaidlabs.com/
WELLSAID_API_KEY=your_wellsaid_api_key

# LMNT
# Sign up: https://lmnt.com/
LMNT_API_KEY=your_lmnt_api_key

# Rime
# Sign up: https://rime.ai/
RIME_API_KEY=your_rime_api_key

# ===================================
# LLM (Language Model) PROVIDERS
# ===================================
# Default: openai, anthropic, google, groq, together, mistral, cohere
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4o

# OpenAI (GPT-4, GPT-3.5)
# Uses OPENAI_API_KEY above

# Anthropic (Claude)
# Sign up: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google AI (Gemini)
# Setup: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Groq (Ultra-fast inference)
# Sign up: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key

# Together AI
# Sign up: https://api.together.xyz/
TOGETHER_API_KEY=your_together_api_key

# Mistral AI
# Sign up: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key

# Cohere
# Sign up: https://dashboard.cohere.com/
COHERE_API_KEY=your_cohere_api_key

# ===================================
# SECURITY & AUTH
# ===================================
JWT_SECRET=your_32_character_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# ===================================
# OPTIONAL: MONITORING
# ===================================
# Sentry (Error tracking)
SENTRY_DSN=

# ===================================
# FEATURE FLAGS
# ===================================
FEATURE_CALL_RECORDING=true
FEATURE_ANALYTICS=true
