# Builder Engine - Environment Variables
# Copy this file to .env and fill in your values

# ===================================
# TELEPHONY (Required for phone calls)
# ===================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.ngrok.io

# ===================================
# SPEECH-TO-TEXT (ASR)
# ===================================
ASR_PROVIDER=deepgram  # deepgram, whisper, or mock
DEEPGRAM_API_KEY=your_deepgram_api_key

# ===================================
# TEXT-TO-SPEECH (TTS)
# ===================================
TTS_PROVIDER=elevenlabs  # elevenlabs, playht, or mock
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# ===================================
# LLM (Language Model)
# ===================================
LLM_PROVIDER=openai  # openai, anthropic, groq, or mock
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
GROQ_API_KEY=your_groq_api_key

# ===================================
# DATABASE
# ===================================
POSTGRES_PASSWORD=your_secure_password

# ===================================
# JWT (for internal auth)
# ===================================
JWT_SECRET=your_32_character_secret_key_here
