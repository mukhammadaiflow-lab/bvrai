# Dialog Manager Service Environment Variables
# Copy this file to .env and fill in your values

# Server configuration
PORT=3003
HOST=0.0.0.0
ENVIRONMENT=development
DEBUG=false

# LLM Configuration
# Provider: "mock" (default), "openai", "anthropic"
LLM_PROVIDER=mock

# TODO: Add your OpenAI API key for production
OPENAI_API_KEY=
LLM_MODEL=gpt-4

# TODO: Or add your Anthropic API key
ANTHROPIC_API_KEY=
# LLM_MODEL=claude-3-opus-20240229

# LLM Parameters
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.7

# Vector DB Configuration
# Provider: "local" (default), "pinecone"
VECTOR_DB_PROVIDER=local
VECTOR_DB_PATH=./data/vectors.db

# TODO: Add Pinecone credentials for production
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=dialog-manager

# RAG Configuration
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# Session Configuration
SESSION_HISTORY_MAX_TURNS=10
SESSION_TTL_SECONDS=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# CORS
CORS_ORIGINS=*
