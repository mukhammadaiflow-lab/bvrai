# Media Bridge / Media Plane Service Environment Variables
# Self-hosted WebSocket-based media plane

PORT=3002
NODE_ENV=development

# JWT Configuration (must match Token Service)
# IMPORTANT: Use the same secret as Token Service
JWT_SECRET=your-secret-key-must-be-at-least-32-chars

# Dialog Manager URL
DIALOG_MANAGER_URL=http://localhost:3003

# Room Settings
MAX_ROOMS=1000
MAX_PARTICIPANTS_PER_ROOM=50
ROOM_IDLE_TIMEOUT_MS=300000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=*
