# Kubernetes Secrets Template
# Copy this file, fill in values, and apply with kubectl
# DO NOT commit actual secrets to version control
---
apiVersion: v1
kind: Secret
metadata:
  name: bvrai-secrets
type: Opaque
stringData:
  # JWT secret (min 32 characters)
  jwt-secret: "REPLACE_WITH_YOUR_SECRET_KEY_MIN_32_CHARS"

  # OpenAI API Key (optional)
  openai-api-key: ""

  # Anthropic API Key (optional)
  anthropic-api-key: ""

  # Pinecone API Key (optional)
  pinecone-api-key: ""
